	<div class="main">

		<div class="container">
		    <div class="page-header">
				<h1 id="">Timeline</h1>
			</div>
			<div id="timeline">

				<div class="row timeline-movement timeline-movement-top">
				    <div class="timeline-badge timeline-future-movement">
				        <a href="#">
				            <span class="fa fa-plus"></span>
				        </a>
				    </div>
				    <div class="timeline-badge timeline-filter-movement">
				        <a href="#">
				            <span class="fa fa-calendar"></span>
				        </a>
				    </div>
				</div>
					<% for (var x = 0; x < foundUser.length;x++) { %>
						<div class="row timeline-movement">
						    <div class="timeline-badge">
						        <span class="timeline-balloon-date-day"></span>
						        <div class="timeline-balloon-date-month"></div>
						    </div>


						    <div class="col-sm-6  timeline-item">
						        <div class="row">
						            <div class="col-sm-11">
						                <div class="timeline-panel credits">
						                    <ul class="timeline-panel-ul">
						                        <li><span class="importo"><%= locations[Math.floor(Math.random() * locations.length)] %></span></li>
						                        <li><span class="causale"> trip starts from </span> </li>
						                        <li><p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= moment(foundUser[x].startingTime).format('MMMM Do YYYY, h:mm:ss a') %></small></p> </li>
						                    </ul>
						                </div>

						            </div>
						        </div>
						    </div>

						    <div class="col-sm-6  timeline-item">
						        <div class="row">
						            <div class="col-sm-offset-1 col-sm-11">
						                <div class="timeline-panel debits">
						                    <ul class="timeline-panel-ul">
						                        <li><span class="importo"> <%= locations[Math.floor(Math.random() * locations.length)] %></span></li>
						                        <li><span class="causale">Trip ends at  </span> </li>
						                        <li><p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= moment(foundUser[x].endTime).format('MMMM Do YYYY, h:mm:ss a') %></small></p> </li>

						                        <li><p><small class="text-muted"><i class="glyphicon glyphicon-time"></i>Fare charged is <%= foundUser[x].amountCharged %></small></p> </li>

						                    </ul>
						                </div>

						            </div>
						        </div>
						    </div>
						</div>
						<% } %>
						<!--due -->


												</div>
			</div>
		</div>

	</div><!--main-->

